{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
  "module": "ES2020",
  "moduleResolution": "bundler",
    "target": "ES2020",
    "declaration": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // Relax strict lint-ish checks for the build to avoid test/import diagnostics
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  // Disable importing .ts extensions during emit build
  "allowImportingTsExtensions": false
  },
  "include": ["server/**/*"],
  "exclude": ["server/__tests__", "server/**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}
